<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_notifications">

    <fragment
        android:id="@+id/navigation_article"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.article.view.ArticleFragment"
        android:label="@string/title_article"
        tools:layout="@layout/fragment_article">
        <action
            android:id="@+id/action_navigation_article_to_webView"
            app:destination="@id/webViewFragment" />
    </fragment>

    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.article.view.WebViewFragment"
        android:label="Веб-страница"
        tools:layout="@layout/fragment_web_view"/>

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.list.view.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_navigation_list_to_navigation_card"
            app:destination="@id/navigation_card"
            app:defaultNavHost="true" />
        <action
            android:id="@+id/action_navigation_list_to_edit"
            app:destination="@id/navigation_edit"
            app:defaultNavHost="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_card"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.list.view.CardFragment"
        android:label="@string/title_card"
        tools:layout="@layout/fragment_card" />

    <fragment
        android:id="@+id/navigation_edit"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.list.view.EditFragment"
        android:label="Редактирование"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_navigation_edit_to_select"
            app:destination="@id/navigation_select"
            app:defaultNavHost="true" />
    </fragment>

    <dialog
        android:id="@+id/navigation_select"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.list.view.SelectSourceFragment"
        tools:layout="@layout/fragment_select_source" />

    <fragment
        android:id="@+id/navigation_video"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.videoPlayer.VideoPlayerFragment"
        android:label="@string/title_third"
        tools:layout="@layout/fragment_video" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.notifications.view.NotificationsListFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications_list">
        <action
            android:id="@+id/action_navigation_notifications_to_add"
            app:destination="@id/navigation_add_notifications"
            app:defaultNavHost="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_notifications"
        android:name="com.example.mobiledevelopmentcourselabapp.presentation.view.notifications.view.NotificationAddFragment"
        tools:layout="@layout/fragment_notification_add" />
</navigation>